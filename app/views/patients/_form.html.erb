<%= simple_form_for @patient do |f| %>
  <%= f.input :name, label: "Name" %>
  <%= f.input :surname, label: "Surname" %>
  <%= f.input :address, label: "Address" %>
  <%= f.input :date_of_birth, label: "Date of Birth" %>
  <%= f.input :phone_no, label: "Phone No.:" %>
  <%= f.input :medical_card, label: "Medical Card" %>
  <%= f.input :medical_insurance, label: "Medical Insurance" %>
  <%= f.button :submit %>
<% end %>
